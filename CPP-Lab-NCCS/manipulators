#include <iostream>
#include<iomanip>

using namespace std;

int main()
{
    int num=123;
    cout<<setw(10)<<num<<endl;
    
    double n=123.456789;
    cout<<setprecision(4)<<n<<endl;
    
    cout<<setw(5)<<setfill('a')<<num<<endl;
    
    
        // cout.setf(ios::showpos | ios::uppercase);
    cout << "Number with showpos and uppercase flags: " << setiosflags(ios::showpos | ios::uppercase)<<num << endl;
    cout << "Number without flags: " << resetiosflags(ios::showpos | ios::uppercase) << num << endl;
    

    return 0;
}
